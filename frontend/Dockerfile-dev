# 1단계: React 빌드
FROM node:18 AS builder
WORKDIR /app

# package.json 설치
COPY package.json package-lock.json* ./
RUN npm install

# 전체 소스 복사 후 빌드
COPY . .
RUN npm run build

# 2단계: Nginx
FROM nginx:1.25-alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
