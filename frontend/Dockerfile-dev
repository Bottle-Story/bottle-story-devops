# 1단계: React 앱 빌드
FROM node:18 AS builder
WORKDIR /app

# 소스 전체 복사 (web-src에서 Jenkins가 복사해온 상태)
COPY . .

# 의존성 설치 및 빌드
RUN npm install
RUN npm run build

# 2단계: Nginx
FROM nginx:1.25-alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
